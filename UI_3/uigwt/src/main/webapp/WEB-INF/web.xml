  </servlet>

  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/Client/greet</url-pattern>
  </servlet-mapping>-->

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Client.html</welcome-file>
  </welcome-file-list>


</web-app>
